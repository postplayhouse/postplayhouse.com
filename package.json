{
  "name": "postplayhouse.com",
  "description": "postplayhouse.com",
  "version": "0.0.1",
  "scripts": {
    "clean": "rm -rf ./static/g",
    "sapper:dev": "sapper dev --ext '.svelte .md'",
    "dev": "run-p --race sapper:dev tailwind:watch",
    "copyFolder": "./scripts/copy_folder",
    "useCache": "yarn copyFolder --merge /opt/build/cache/hc_my_cache/static/g --to static/g",
    "fillCache": "yarn copyFolder --save static/g --to /opt/build/cache/hc_my_cache/static/g",
    "build": "yarn clean && yarn tailwind:prod && sapper build --legacy --ext '.svelte .md'",
    "export": "yarn tailwind:prod && sapper export --legacy --ext '.svelte .md' --entry entries",
    "netlify": "yarn useCache && yarn export && yarn fillCache",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "tailwind": "postcss static/tailwind.css -o static/index.css",
    "tailwind:watch": "yarn tailwind -w",
    "tailwind:prod": "NODE_ENV=production yarn tailwind",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "marked": "^0.7.0",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@types/compression": "^1.0.0",
    "@types/lodash": "^4.14.136",
    "@types/markdown-it": "^0.0.8",
    "@types/node": "^12.7.1",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "frontmatter": "0.0.3",
    "markdown-it": "^9.1.0",
    "mdsvex": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-image": "happycollision/svelte-image#beb2e192",
    "tailwindcss": "^1.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2",
    "xxhash": "^0.3.0"
  }
}
